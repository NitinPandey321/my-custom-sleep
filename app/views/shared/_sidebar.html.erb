<nav id="sidebar" class="sidebar">
  <div class="sidebar-header">
    <% if current_user.profile_picture.attached? %>
      <div class="profile-wrapper">
        <img id="profile-pic"
             src="<%= rails_blob_url(current_user.profile_picture, disposition: 'inline') %>"
             alt="Profile picture"
             class="profile-picture" />
        <span class="profile-name"><%= current_user.full_name %></span>
      </div>
    <% else %>
      <div class="profile-wrapper">
        <div class="client-avatar red">
          <%= current_user.initials %>
        </div>
        <span class="profile-name"><%= current_user.full_name %></span>
      </div>
    <% end %>
  </div>

  <ul class="sidebar-list">
    <li>
      <%= link_to root_path, class: "sidebar-link #{current_page?(current_user.client? ? dashboards_client_path : dashboards_coach_path) ? 'active' : ''}" do %>
        <i class="fas fa-tachometer-alt"></i>
        <span class="sidebar-text">Dashboard</span>
      <% end %>
    </li>
    <li>
      <%= link_to user_path(current_user), class: "sidebar-link #{current_page?(user_path(current_user)) ? 'active' : ''}" do %>
        <i class="fas fa-user"></i>
        <span class="sidebar-text">View Profile</span>
      <% end %>
    </li>

    <li>
      <%= link_to edit_user_path(current_user), class: "sidebar-link #{current_page?(edit_user_path(current_user)) ? 'active' : ''}" do %>
        <i class="fas fa-user-edit"></i>
        <span class="sidebar-text">Edit Profile</span>
      <% end %>
    </li>
    <li>
      <%= link_to '#', class: "sidebar-link" do %>
        <i class="fas fa-dumbbell"></i>
        <span class="sidebar-text">Exercise Gallery</span>
      <% end %>
    </li>
  </ul>

  <div class="sidebar-bottom">
    <%= link_to logout_path, method: :delete, class: "sidebar-link" do %>
      <i class="fas fa-sign-out-alt"></i>
      <span class="sidebar-text">Logout</span>
    <% end %>
  </div>
</nav>
