<div class="logs-container">
  <div class="logs-header">
    <h1>Activity Logs</h1>
    <%= link_to "Back", root_path, class: "btn-secondary" %>
  </div>

  <% if @audit_logs.any? %>
    <div class="logs-table-wrapper">
      <table class="logs-table">
        <thead>
          <tr>
            <th>User</th>
            <th>Role</th>
            <th>Action</th>
            <th>Details</th>
            <th>Time</th>
          </tr>
        </thead>
        <tbody>
          <% @audit_logs.each do |log| %>
            <tr>
              <td><%= log.user&.full_name || "System" %></td>
              <td><span class="role-badge <%= log.role %>"><%= log.role.titleize %></span></td>
              <td><span class="action-badge <%= log.action %>"><%= log.action.humanize %></span></td>
              <td><%= log.details %></td>
              <td><%= log.created_at.strftime("%Y-%m-%d %H:%M") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="empty-message">No logs found.</p>
  <% end %>
</div>


<style>
.logs-container {
  background: #f9fafc;
  padding: 30px;
  border-radius: 12px;
  box-shadow: 0 3px 10px rgba(0,0,0,0.05);
}

.logs-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25px;
}

.logs-header h1 {
  font-size: 24px;
  font-weight: bold;
  color: #0e3264;
  margin: 0;
}

.btn-secondary {
  padding: 8px 16px;
  background: #eee;
  border-radius: 6px;
  text-decoration: none;
  font-weight: 500;
  color: #333;
  transition: background 0.2s ease;
}
.btn-secondary:hover {
  background: #ddd;
}

.logs-table {
  width: 100%;
  border-collapse: collapse;
  background: white;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 2px 6px rgba(0,0,0,0.05);
}

.logs-table th, .logs-table td {
  padding: 14px 16px;
  text-align: left;
  border-bottom: 1px solid #eee;
}

.logs-table th {
  background: #0e3264;
  color: white;
  font-weight: 600;
}

.logs-table tr:hover {
  background: #f4f7fb;
}

.role-badge {
  padding: 4px 10px;
  border-radius: 20px;
  font-size: 13px;
  font-weight: 600;
  color: white;
}
.role-badge.client { background: #0e7c7b; }
.role-badge.client { background: #0e7c7b; }
.role-badge.coach  { background: #f57c00; }
.role-badge.admin  { background: #673ab7; }

.action-badge {
  padding: 3px 8px;
  border-radius: 12px;
  font-size: 12px;
  font-weight: 600;
  color: white;
}
.action-badge.plan_created              { background: #2196f3; }
.action-badge.plan_submitted_on_time    { background: #4caf50; }
.action-badge.plan_submitted_late       { background: #e53935; }
.action-badge.plan_approved             { background: #43a047; }
.action-badge.plan_resubmission_requested { background: #ff9800; }

.empty-message {
  text-align: center;
  padding: 20px;
  color: #888;
  font-style: italic;
}
</style>
