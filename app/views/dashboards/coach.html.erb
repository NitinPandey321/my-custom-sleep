<!-- Coach Dashboard - positioned at top below navbar -->
<div class="container" style="margin-top: 0; padding-top: 20px;">
  <section class="coach-dashboard">
    <div class="coach-info">
      <div class="coach-avatar"><%= @coach.initials %></div>
      <div class="coach-details">
        <h2><%= @coach.full_name %></h2>
        <p><%= @coach.designation %></p>
      </div>
    </div>

    <div class="stats-container">
      <div class="stat-box">
        <div class="icon">üë•</div>
        <div class="stat-title">Total Clients</div>
        <div class="stat-value"><%= @total_clients %></div>
      </div>
      <div class="stat-box">
        <div class="icon">‚úÖ</div>
        <div class="stat-title">Active Clients</div>
        <div class="stat-value"><%= @active_clients %></div>
      </div>
      <div class="stat-box">
        <div class="icon">‚è∞</div>
        <div class="stat-title">Pending Approvals</div>
        <div class="stat-value"><%= @pending_approvals %></div>
      </div>
    </div>
  </section>

  <!-- Dashboard Cards Section -->
  <div class="dashboard-cards">
    <!-- Client Overview Card -->
    <div class="card client-overview-card">
      <h2>Client Overview</h2>
      <div class="search-filter">
        <input type="text" placeholder="Search clients..." class="search-input">
        <select class="status-filter">
          <option>All Status</option>
          <option>On Track</option>
          <option>Needs Attention</option>
          <option>Falling Behind</option>
        </select>
      </div>
      <div class="client-list">
        <div class="client-item">
          <div class="client-info">
            <div class="client-avatar green">A</div>
            <div class="client-text">
              <h4>Alex Thompson</h4>
              <p>Night Shift Nurse ‚Ä¢ 7-day streak</p>
            </div>
          </div>
          <div class="client-actions">
            <span class="status-badge on-track">On Track</span>
            <button class="btn-plan">+ Plan</button>
            <button class="btn-icon">üëÅ</button>
          </div>
        </div>

        <div class="client-item">
          <div class="client-info">
            <div class="client-avatar yellow">M</div>
            <div class="client-text">
              <h4>Maria Rodriguez</h4>
              <p>Security Guard ‚Ä¢ 3-day streak</p>
            </div>
          </div>
          <div class="client-actions">
            <span class="status-badge needs-attention">Needs Attention</span>
            <button class="btn-plan">+ Plan</button>
            <button class="btn-icon">üëÅ</button>
          </div>
        </div>

        <div class="client-item">
          <div class="client-info">
            <div class="client-avatar red">J</div>
            <div class="client-text">
              <h4>James Wilson</h4>
              <p>Factory Worker ‚Ä¢ 0-day streak</p>
            </div>
          </div>
          <div class="client-actions">
            <span class="status-badge falling-behind">Falling Behind</span>
            <button class="btn-plan">+ Plan</button>
            <button class="btn-icon">üëÅ</button>
          </div>
        </div>

        <div class="client-item">
          <div class="client-info">
            <div class="client-avatar green">S</div>
            <div class="client-text">
              <h4>Sarah Chen</h4>
              <p>Hospital Technician ‚Ä¢ 5-day streak</p>
            </div>
          </div>
          <div class="client-actions">
            <span class="status-badge on-track">On Track</span>
            <button class="btn-plan">+ Plan</button>
            <button class="btn-icon">üëÅ</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Create New Plan Card (placed just below Client Overview) -->
    <div class="card create-plan">
      <div class="card-header">
        <h3>Create New Plan</h3>
        <button class="close-btn">&times;</button>
      </div>

      <div class="user-info">
        <div class="avatar">M</div>
        <div class="user-details">
          <p class="name">Maria Rodriguez</p>
          <p class="role">Security Guard ‚Ä¢ 3-day streak</p>
        </div>
      </div>

      <div class="form-group">
        <label for="wellness-pillar">Wellness Pillar</label>
        <select id="wellness-pillar">
          <option selected disabled>Select a pillar...</option>
          <option>Physical Wellness</option>
          <option>Mental Wellness</option>
          <option>Emotional Wellness</option>
          <option>Financial Wellness</option>
        </select>
      </div>
    </div>

    <!-- Active Chats Card -->
    <div class="card active-chats-card">
      <h2 class="chat-header">
        Active Chats 
        <span class="online-dot"></span>
      </h2>
      <div class="chat-box">
        <div class="chat-bubble chat-client">
          Hi Dr. <%= @coach.first_name %>! I'm struggling with staying awake during my shift tonight. Any quick tips?
          <br><small>2 minutes ago</small>
        </div>
        <div class="chat-bubble chat-doctor">
          Try the caffeine timing we discussed - 40ml at 4 PM should help! Also, do a quick 5-minute walk.
          <div class="dr-avatar"><%= @coach.initials %></div>
          <br><small>Just now</small>
        </div>
      </div>
      <div class="quick-replies">
        <button class="quick-reply-btn">Remember to hydrate!</button>
        <button class="quick-reply-btn">Great progress!</button>
        <button class="quick-reply-btn">Keep it up!</button>
      </div>
      <div class="chat-input">
        <input type="text" placeholder="Type your message..." class="message-input">
        <button class="send-btn">‚úà</button>
      </div>
    </div>
  </div>
</div>
