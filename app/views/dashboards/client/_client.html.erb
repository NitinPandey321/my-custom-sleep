<div class="client-item">
  <div class="client-info">
    <% if client.profile_picture.attached? %>
      <img id="profile-pic" 
           src="<%= rails_blob_url(client.profile_picture, disposition: 'inline') %>" 
           alt="Profile picture" 
           class="profile-picture" />
    <% else %>
      <div class="client-avatar red"><%= client.initials %></div>
    <% end %>

    <div class="client-text">
      <h4><%= client.full_name %></h4>
      <p>Factory Worker â€¢ 0-day streak</p>
    </div>
  </div>

  <div class="client-actions">
  <span class="status-badge <%= client.status %>"><%= client.status.titleize %></span>
  <%= link_to "+ Plan", dashboards_coach_path(client_id: client.id), class: "btn-plan" %>

  <%= link_to "ðŸ’¬",
    dashboards_coach_path(recipient_id: client.id),
    class: "btn btn-chat" %>
    <span id="unread_count_user_<%= Conversation.between(current_user.id, client.id).first&.id %>_<%= client.id %>" 
          class="badge">
      <%= current_user.unread_messages_count(client) %>
    </span>
</div>

</div>
