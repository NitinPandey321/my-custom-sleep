<div id="proof-modal"
     class="modal"
     data-proof-upload-target="modal">
  <div class="modal-content">
    <span class="modal-close" data-action="click->proof-upload#close">&times;</span>
    <h3 class="modal-title">Upload Proof</h3>
    <p id="proof-message" data-proof-upload-target="message" class="modal-message"></p>

    <%= form_with url: "#",
                  html: { multipart: true, data: { proof_upload_target: "form" } },
                  local: true do |f| %>
      <div class="form-group">
        <%= f.file_field :proof,
                          accept: "image/*",
                          class: "file-input",
                          multiple: true,
                          data: { proof_upload_target: "file",
                                  action: "change->proof-upload#fileChanged" } %>

        <!-- Clear button (hidden by default) -->
        <button type="button"
                class="clear-btn"
                data-proof-upload-target="clearButton"
                data-action="click->proof-upload#clearFile"
                style="display:none;">
          âœ– Clear
        </button>
      </div>

      <div class="form-actions">
        <%= f.submit "Submit",
                     class: "submit-btn",
                     data: { proof_upload_target: "submit" } %>
      </div>
    <% end %>
  </div>
</div>
