<div class="stats-container">
  <%= link_to "#{dashboards_coach_path}#client-overview-card", class: "stat-box" do %>
    <div class="icon">👥</div>
    <div class="stat-title">Total Clients</div>
    <div class="stat-value"><%= @total_clients %></div>
  <% end %>

  <%= link_to "#{dashboards_coach_path}#client-overview-card", class: "stat-box" do %>
    <div class="icon">✅</div>
    <div class="stat-title">Needs Attention</div>
    <div class="stat-value"><%= @needs_attention_clients %></div>
  <% end %>

  <%= link_to "#{dashboards_coach_path}#client-overview-card", class: "stat-box" do %>
    <div class="icon">⏰</div>
    <div class="stat-title">Falling Behind</div>
    <div class="stat-value"><%= @falling_behind_clients %></div>
  <% end %>
</div>
