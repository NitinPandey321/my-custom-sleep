<div class="role-selection-container">
  <!-- Logo Section -->
  <div class="role-logo">
    <%= link_to root_path, class: "logo-link" do %>
      <%= image_tag "my-custom-logo.jpeg", alt: "My Custom Sleep Journey", class: "brand-logo" %>
    <% end %>
  </div>

  <!-- Page Header -->
  <div class="role-header">
    <h1>Join Sleep Journey</h1>
    <p>Choose how you'd like to get started</p>
  </div>

  <!-- Role Selection Cards -->
  <div class="role-cards">
    <%= link_to signup_client_path, class: "role-card client-card" do %>
      <div class="role-icon">
        <svg viewBox="0 0 24 24" fill="currentColor" class="role-svg">
          <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
        </svg>
      </div>
      <h3>I am a Client</h3>
      <p>Start your personalized sleep journey with expert guidance</p>
      <div class="role-arrow">→</div>
    <% end %>

    <%= link_to signup_coach_path, class: "role-card coach-card" do %>
      <div class="role-icon">
        <svg viewBox="0 0 24 24" fill="currentColor" class="role-svg">
          <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"/>
        </svg>
      </div>
      <h3>I am a Coach</h3>
      <p>Help clients achieve better sleep and wellness goals</p>
      <div class="role-arrow">→</div>
    <% end %>
  </div>

  <!-- Footer -->
  <div class="role-footer">
    <p>Already have an account? 
      <%= link_to "Sign in", login_path, class: "auth-link" %>
    </p>
  </div>
</div>
